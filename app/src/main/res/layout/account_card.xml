<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="6dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="10dp"
    android:background="@color/main_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/account_card"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardBackgroundColor="@color/navy"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:outlineSpotShadowColor="@color/main_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="13dp"
            android:paddingHorizontal="18dp"
            android:layout_marginBottom="10px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/acc_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saving"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/slate_gray"/>

                <TextView
                    android:id="@+id/account_num_txt"
                    android:layout_width="130dp"
                    android:layout_height="24dp"
                    android:text="100034098"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="77dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textColor="@color/slate_gray"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="-6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sign_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:layout_marginRight="2dp"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:id="@+id/balance_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="5 300.00"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/currency_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/currency_egp"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="-15dp"
                    android:layout_marginEnd="-2dp"
                    android:src="@drawable/ic_mastercard_logo_192"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>